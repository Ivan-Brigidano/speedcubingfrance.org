<div class="col-12 col-md-4">
  <h5 class="card-title"><%= competition.name %></h5>
  <% if competition.respond_to?(:city) %>
    <p class="card-meta text-muted"><%= competition.city %></p>
  <% end %>
  <p class="card-text">
    <% if competition.respond_to?(:alt_text) %>
      <%= competition.alt_text %>
    <% else %>
      <%= I18n.t("posts.dates", start: l(competition.start_date, format: :day_month), end: l(competition.end_date)) %>
    <% end %>
  </p>
  <% if competition.respond_to?(:website) %>
    <a href="<%= competition.website %>" class="btn btn-primary" target="_blank"><%= I18n.t("posts.visit_website") %></a>
  <% end %>
</div>
