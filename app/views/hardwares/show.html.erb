<% provide(:title, "Infos sur " + @hardware.name) %>
<%= render "layouts/page_wrapper", title: @hardware.name + " (" + @hardware.hardware_type_string + ")" do %>
  <p>
    <strong>Nom :</strong>
    <%= @hardware.name %> (<%= @hardware.hardware_type_string %>)
  </p>

  <p class="state-<%= @hardware.state %>">
    <%= @hardware.state_string %> <%= fa_icon('circle') %>
  </p>

  <p>
    <strong>Commentaire :</strong>
    <%= @hardware.comment %>
  </p>

  <%= render "shared/show_owners_list", item: @hardware %>

  <% if @hardware.bag %>
    <h3>Dans le sac <%= link_to @hardware.bag.name, @hardware.bag %></h3>
    <% if @hardware.bag.owners.any? %>
      <%= render "shared/show_owners_list", item: @hardware.bag %>
    <% end %>
  <% end %>

