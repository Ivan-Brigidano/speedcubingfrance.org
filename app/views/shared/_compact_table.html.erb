<% headers ||= [I18n.t("table_headers.firstname"), I18n.t("table_headers.name"), I18n.t("table_headers.wca_id"), I18n.t("table_headers.email"), I18n.t("table_headers.paid_at"), "", ""] %>
<div class="table-responsive">
<table class="table table-striped table-bordered table-hover table-sm sort-me">
  <thead class="thead-dark">
    <tr>
      <% headers.each do |h| %>
        <th><%= h %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <%= yield %>
  </tbody>
</table>
</div>
