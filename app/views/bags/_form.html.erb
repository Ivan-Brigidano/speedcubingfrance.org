<%= simple_form_for(@bag) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <h3><%= I18n.t("bags.owner_title") %></h3>
    <%= render "shared/nested_form_for_owners", f: f %>
  </div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
