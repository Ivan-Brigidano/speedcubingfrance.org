<%= simple_form_for(@online_competition) do |f| %>
  <%= f.error_notification message: "Le formulaire est invalide. Merci de corriger les erreurs ci dessous." %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slug %>
    <%= f.input :scrambles_pdf, hint: hint_for_scrambles(@online_competition), label: "Uploader un fichier pdf avec les mélanges" %>
    <%= f.input :delete_pdf, as: :boolean, label: "Supprimer le pdf de mélanges" %>
    <%= f.input :start_date, as: :date_picker %>
    <%= f.input :end_date, as: :date_picker %>
    <%= f.input :visible %>
    <%= f.input :force_close %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
